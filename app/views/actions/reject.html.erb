<h2>Please provide reasons for rejection.</h2>

<div class="form-wrapper">
    
    <%= form_tag url: reject_path(@action.id), method: :post do %>
        <%= text_area_tag :updatetext, nil, class: "form-control" %>
        <%= hidden_field_tag :id, @action.id %>
        <%= hidden_field_tag :extend_request_flag, @action.extend_request_flag %>
        <%= hidden_field_tag :close_request_flag, @action.close_request_flag %>
        <br/>
        <%= submit_tag "Return Action", class: "btn btn-primary" %>
    <% end %>
    
</div>

    