<div class="form-wrapper">
      <%= form_for(:actions, url: actions_path, :method => :post) do |f| %>
            
            
            <% lastaction = @last_action.id %>
             
            <%= f.label  :reference_number %>
            <%= f.text_field  :reference_number, class: 'form-control', :placeholder => lastaction + 1, :disabled=>true %>
            <%= f.hidden_field  :reference_number, :value => lastaction + 1 %>
            
            <%= f.label  :initiator %>
            <%= f.text_field  :initiator, class: 'form-control', :placeholder => "#{current_user.first_name} #{current_user.last_name}", :disabled=>true %>
            <%= f.hidden_field  :initiator, :value => "#{current_user.first_name} #{current_user.last_name}" %>
            <br/>
            
            <%= f.label  :owner %>
            <%= f.collection_select(:owner, User.order(:last_name),:id,:last_name, {:include_blank => true}, {:id =>"choose-owner"}) %>
            <br/>
            
            <%= f.text_field  :owner, class: 'form-control', :placeholder => "#{current_user.first_name} #{current_user.last_name}", :disabled=>true, :id => "owner_dummy" %>
            <%= f.hidden_field  :owner, :value => "#{current_user.first_name} #{current_user.last_name}" %>
            
            <table>
                  <tr>
                        <td>
                              <%= f.label  :source %>
                              <%= f.select(:source, [['QA', 'QA'],['SHE', 'SHE']], {:id => "choose-source"}) %> 
                              <%= f.text_field  :source, class: 'form-control' %>
                        </td>
                        <td>
                              <%= f.label :event_id, "Associated UNOR" %>
                              <%= f.collection_select(:source, {}, nil, nil ) %>
                              <%#= f.collection_select(:event_id, Event.order(:id),:id,:event_id, {:include_blank => true}, {:id =>"choose-event"}) %>
                              <%= f.text_field :event_id, class: 'form-control' %>
                        </td>
                  </tr>
            </table>
            
            <%= f.label "Action Type" %>
            <%= f.radio_button :type_ABC, "A" %>
            <%= f.label :type_ABC, "A" %>
            <%= f.radio_button :type_ABC, "B" %>
            <%= f.label :type_ABC, "B" %>
            <%= f.radio_button :type_ABC, "C" %>
            <%= f.label :type_ABC, "C" %>
            <br/>

            <%= f.label :target_date %>
            <%= f.date_field :date_target, class: 'form-control' %>
            <%= f.hidden_field  :date_time_created, :value => Time.now %>
            <br/>
            
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
            
            <%= f.label :progress %>
            <%= f.text_area :progress, class: 'form-control' %>
            
            <%= f.label :closeout %>
            <%= f.text_area :closeout, class: 'form-control' %>
              
            <br/>
            <%= f.submit "Create a new action.", class: "btn btn-primary" %>
            
      <% end %>
  
</div>

