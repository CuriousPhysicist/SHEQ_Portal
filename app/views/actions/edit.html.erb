<div class="form-wrapper">
  <%= form_for(:actions, url: action_path, method: :patch) do |f| %>
      
      <%= f.label  :reference_number %>
      <%= f.text_field  :reference_number, class: 'form-control', :placeholder => @actions.reference_number, :disabled=>true %>
      <%= f.hidden_field  :reference_number, :value => @actions.reference_number %>
      
      <%= f.label  :initiator %>
      <%= f.text_field  :initiator, class: 'form-control', :placeholder => "#{@actions.initiator}", :disabled=>true %>
      <%= f.hidden_field  :initiator, :value => "#{@actions.initiator}" %>
      <br/>
      <%= f.label  :owner %>
      
      <%= f.collection_select(:owner, User.order(:last_name),:id,:last_name, {:include_blank => true}, {:id =>"choose-owner"}) %>
      <br>

      <%= f.text_field  :owner, class: 'form-control', :disabled => true, :id => "owner_dummy" %>
      <%= f.hidden_field  :owner, :value => "#{@actions.owner}" %>
      
      <table>
            <tr>
                  <td>
                        <%= f.label  :source %>
                        <%= f.text_field  :source, class: 'form-control', :placeholder => "#{@actions.source}" %>
                  </td>
                  <td>
                        <%= f.label :event_id, "Associated UNOR" %>
                        <%= f.text_field :event_id, class: 'form-control', :placeholder => "#{@actions.event_id}" %>
                  </td>
            </tr>
      </table>
      
      <%= f.label "Action Type" %>
      <%= f.radio_button :type_ABC, "A" %>
      <%= f.label :type_ABC, "A" %>
      <%= f.radio_button :type_ABC, "B" %>
      <%= f.label :type_ABC, "B" %>
      <%= f.radio_button :type_ABC, "C" %>
      <%= f.label :type_ABC, "C" %>
   
        <br />
        <table>
            <tr>
                  <td>
                        <%= f.label :date_time_created %>
                        <%= f.datetime_local_field :date_time_created, class: 'form-control' %>
                  </td>
                  <td>
                        <%= f.label :target_date %>
                        <%= f.date_field :date_target, class: 'form-control', :value => @actions.date_target %>
                  </td>
            </tr>
        </table>         
      
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control'  %>
      
      <%= f.label :progress %>
      <%= f.text_area :progress, class: 'form-control' %>
      
      <%= f.label :closeout %>
      <%= f.text_area :closeout, class: 'form-control' %>
      <br/>
      
      <%= f.label :closed_flag, "Action Closed" %>
      <%= f.check_box :closed_flag, disabled: :true %>
       
      <br/>
      <%= f.submit "Update this Action", class: "btn btn-primary" %>
      
      
  <% end %>
  
  <br/>
  
  <% if @user.approval_type == nil %>
    <table>
        <tr>
          <td>
            <%= link_to "Request Action Extension", extendplease_path(@actions.id), method: :patch, class:"btn btn-primary" %>
          </td>
          <td>
            <%= link_to "Request Action Close-out", closeplease_path(@actions.id), method: :patch, class:"btn btn-primary" %>
          </td>
        </tr>
      </table>
  <% elsif @user.approval_type == "B and C Type" %>
    <% if @actions.type_ABC == "A"%>
    <% elsif @actions.type_ABC == "B" && @actions.extension_number >= 1 %>
    <% else %>
      <table>
        <tr>
          <td>
            <%= link_to "Request Action Extension", extendplease_path(@actions.id), method: :patch, class:"btn btn-primary" %><br/><br/>
            <%= link_to "Reject Extension Request", reject_path(@actions.id), class:"btn btn-primary" %><br/><br/>
            <%= link_to "Extend Action", extend_path(@actions.id), method: :patch, class:"btn btn-primary" %>
          </td>
          <td>
            <%= link_to "Request Action Close-out", closeplease_path(@actions.id), method: :patch, class:"btn btn-primary" %><br/><br/>
            <%= link_to "Reject Close Request", reject_path(@actions.id), class:"btn btn-primary" %><br/><br/>
            <%= link_to "Close Action", close_path(@actions.id), method: :patch, class:"btn btn-primary" %>
          </td>
        </tr>
      </table>
    <% end %>
  <% else %>
    <table>
        <tr>
          <td>
            <%= link_to "Request Action Extension", extendplease_path(@actions.id), method: :patch, class:"btn btn-primary" %><br/><br/>
            <%= link_to "Reject Extension Request", reject_path(@actions.id), class:"btn btn-primary" %><br/><br/>
            <%= link_to "Extend Action", extend_path(@actions.id), method: :patch, class:"btn btn-primary" %>
          </td>
          <td>
            <%= link_to "Request Action Close-out", closeplease_path(@actions.id), method: :patch, class:"btn btn-primary" %><br/><br/>
            <%= link_to "Reject Close Request", reject_path(@actions.id), class:"btn btn-primary" %><br/><br/>
            <%= link_to "Close Action", close_path(@actions.id), method: :patch, class:"btn btn-primary" %>
          </td>
        </tr>
      </table>
  <% end %>

</div>