<%-#image_tag("smiley_face.png", :alt => "Profile picture") -%>
<div class"d-inline">
    <%= link_to (image_tag("logo.jpg", :alt => "Inutec")), root_path, :class =>"pull-left" %>
    <h1 class="app-title">SHEQ Application</h1>
    <nav class="navbar">
        <div class="navbar-header pull-left">
            <ul>
                <% if !logged_in? %>
                    <li><%= link_to "Home", "/", :class => "btn btn-secondary" %></li>
                <% else %>
                    <li><%= link_to "Home", actions_path, :class => "btn btn-secondary" %></li>
                <% end %>
                <% if !logged_in? %>
                    <li><%= link_to "Actions", dashboard_actions_path, :class => "btn btn-secondary" %></li>
                <% else %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle btn btn-secondary" data-toggle="dropdown">Actions <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><%= link_to "Actions Dashboard", dashboard_actions_path, :class => "btn btn-secondary" %></li>
                          <li>
                                <%= form_tag(actions_path, method: :get) do %>
                                  <%= text_field_tag :search, params[:search], placeholder: "Search Actions" %>
                                  <%= submit_tag "Search", :name => nil, :class => "btn btn-secondary nav-btn" %>
                                <% end %>
                          </li>
                        </ul>
                    </li>
                <% end %>
                <% if !logged_in? %>
                    <li><%= link_to "UNORs", dashboard_events_path, :class => "btn btn-secondary" %></li>
                <% else %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle btn btn-secondary" data-toggle="dropdown">UNORs <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><%= link_to "UNORs Dashboard", dashboard_events_path, :class => "btn btn-secondary" %></li>
                          <li>
                                <%= form_tag(events_path, method: :get) do %>
                                  <%= text_field_tag :search, params[:search], placeholder: "Search UNORs" %>
                                  <%= submit_tag "Search", :name => nil, :class => "btn btn-secondary nav-btn" %>
                                <% end %>
                          </li>
                        </ul>
                    </li>
                <% end %>
                <% if !logged_in? %>
                    <li><%= link_to "Documents", dashboard_documents_path, :class => "btn btn-secondary" %></li>
                <% else %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle btn btn-secondary" data-toggle="dropdown">Documents <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><%= link_to "Documents Dashboard", dashboard_documents_path, :class => "btn btn-secondary" %></li>
                          <li><%= link_to "New Document", new_document_path, :class => "btn btn-secondary" %></li>
                          <li>
                                <%= form_tag(documents_path, method: :get) do %>
                                  <%= text_field_tag :search, params[:search], placeholder: "Search Documents" %>
                                  <%= submit_tag "Search", :name => nil, :class => "btn btn-secondary nav-btn" %>
                                <% end %>
                          </li>
                        </ul>
                    </li>
                <% end %>
                <li><%= link_to "Training", "#", :class => "btn btn-secondary" %></li>
                <li><%= link_to "Appointments", "#", :class => "btn btn-secondary" %></li>
            </ul>
        </div>
        <div class="navbar-header pull-right">
            <ul>
            <% if !logged_in? %>
                <li><%= link_to "Log in", login_path, :class => "btn btn-secondary" %></li>
            <% else %>
                <li><%= link_to "REPORT EVENT", new_event_path(current_user.id), :class => "btn btn-primary btn-danger" %></li>
                <li><%= link_to "Log out", logout_path, method: "delete", :class => "btn btn-secondary" %></li>
            <% end %>
            <% if current_user.try(:admin) %>
                <li><%= link_to "Import Data", uploader_options_path, :class => "btn btn-secondary" %></li>
            <% end %>
        </ul>
        </div>
    </nav>
</div>
    
