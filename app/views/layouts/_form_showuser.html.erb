<%= form_for(@user, url: yield(:path)) do |f| %>
      <%#= render 'shared/error_messages', object: f.object %>
        
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', placeholder: @user.first_name, disabled: true %>
      
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control', placeholder: @user.last_name, disabled: true %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: @user.email, disabled: true%>

      <br/>
      
      
      <%= f.label :team %>
      <%= f.text_field :team, class: 'form-control', placeholder: @user.team, disabled: true %>
      <%= f.label :role %>
      <%= f.text_field :role, class: 'form-control', placeholder: @user.role, disabled: true %>
      <br/>
      <%= f.label "Approval Rights" %>
      <%= f.text_field :approval_type, class: 'form-control', placeholder: @user.approval_type, disabled: true %>
      <br/>
      
<% end %>