<%= form_for :approval_routes, url: yield(:path), :method => yield(:method_text) do |f| %>
            
      <h3><i><%= @document.title %></i></h3>
            
      <br/>
      <%= f.label :author %>
      <% if yield(:show_flag) == "" %>
            <%= f.collection_select(:author_name, User.order(:last_name),:id,:last_name, {:include_blank => true}, {:id =>"choose-author"}) %>
            <%= f.hidden_field :author_name %>
            <%= f.text_field :author_name, :placeholder => "#{@author_user.first_name} #{@author_user.last_name}", :class => "form-control", :id => "author-dummy", disabled: true %>
      <% else %>
            <%= f.text_field :author_name, :value => "#{@author_user.first_name} #{@author_user.last_name}", :class => "form-control", disabled: true %>
      <% end %>
      
      <br/>
      <%= f.label :reviewer %>
      <% if yield(:show_flag) == "" %>
            <%= f.collection_select(:reviewer_name, User.order(:last_name),:id,:last_name, {:include_blank => true}, {:id =>"choose-reviewer"}) %>
            <%= f.hidden_field :reviewer_name %>
            <%= f.text_field :reviewer_name, :placeholder => "#{@reviewer_user.first_name} #{@reviewer_user.last_name}", :class => "form-control", :id => "reviewer-dummy", disabled: true %>
      <% else %>
            <%= f.text_field :reviewer_name, :value => "#{@reviewer_user.first_name} #{@reviewer_user.last_name}", :class => "form-control", disabled: true %>
      <% end %>
      
      <br/>
      <%= f.label :approver %>
      <% if yield(:show_flag) == "" %>
            <%= f.collection_select(:approver_name, User.order(:last_name),:id,:last_name, {:include_blank => true}, {:id =>"choose-approver"}) %>
            <%= f.hidden_field :approver_name %>
            <%= f.text_field :approver_name, :placeholder => "#{@approver_user.first_name} #{@approver_user.last_name}", :class => "form-control", :id => "approver-dummy", disabled: true %>
      <% else %>
            <%= f.text_field :approver_name, :value => "#{@approver_user.first_name} #{@approver_user.last_name}", :class => "form-control", disabled: true %>
      <% end %>
      
      <% if yield(:show_flag) == "" %>
      <br/><br/>
            <%= f.submit yield(:button_text), class: "btn btn-primary", :id => "submit-button" %>
      <% end %>
      
<% end %>