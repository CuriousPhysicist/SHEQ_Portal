<h2>Please provide comment on user deactivation.</h2>

<div class="form-wrapper">
    
    <%= form_for @users, url: deactivation_path(@users.id), method: :post do %>
        <%= text_area_tag :comment, nil, class: "form-control" %>
        <%= hidden_field_tag :id, @users.id %>
        <br/>
        <%= submit_tag "Deactivate User", class: "btn btn-primary" %>
    <% end %>
    
</div>